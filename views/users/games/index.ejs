<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title><%= targetUser.username %>'s Games</title>
</head>

<body>
    <%- include('../../partials/_navbar') %>
    <div class="all-games-body">
        <div class="all-games-header">
            <h1>
                <% if (targetUser.displayName) { %>
                <%= targetUser.displayName %>'s Games (<%= targetUser.username %>)
                <% } else { %>
                <%= targetUser.username %>'s Games
                <% }; %>
            </h1>
            <% if (targetUser._id == user._id) { %>
            <a class="add-game-link" href="/games/search">Add a new game</a>
            <% }; %>
        </div>
        <ul>
            <% games.forEach(game => { %>
            <a href="/games/<%= game._id %>">
                <li><%= game.name %></li>
            </a>
            <% }); %>
        </ul>
    </div>
</body>

</html>